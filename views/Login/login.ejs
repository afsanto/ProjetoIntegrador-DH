<body>
    <!-- Header -->
	<%- include ('../partials/header')%>
	<!-- /Header -->

    <main>
        <div id="container-login">
            <h1>Login</h1>
            <form action="/users/login" method="post">
                <label for="usuario">E-mail</label>
                <input type="text" name="email" id="usuario" placeholder="Digite seu e-mail" autocomplete="off" required>
                <label for="senha">Senha</label>
                <i id="verSenha" class="fa fa-eye" aria-hidden="true"></i>
                <input type="password" name="senha" id="senha" placeholder="Digite sua senha" required>
                <a href="/forget" id="forgot-pass">Esqueceu a senha?</a>
                <input type="submit"  value="Entrar">
                <div id="new-user">
                    <a href="/users/cadastro">NÃ£o tem uma conta? Criar uma nova conta</a>
                </div>
            </form>
        </div>
    </main>
    <!-- fim main  -->

<!-- footer -->
<%- include('../partials/footer')%>
